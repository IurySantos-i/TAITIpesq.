import pandas as pd
import os
import subprocess

def string_to_list(s):
    # Remove the square brackets from the string
    s = s[1:-1]

    # Split the string into a list of strings
    lst = s.split(", ")

    return lst

while True:
    # Read the xlsx file
    df = pd.read_excel('formalized_tasks_jekyll.git.xlsx')

    # Take task id as input via terminal
    task_id = input("Enter the task id: ")

    # Look up the hashes on the array of the inputted task id
    hashes = df['HASHES'].tolist() 

    hashselected = string_to_list(hashes[int(task_id)])


    # Open the corresponding commit websites (github commits) of every hash looked up in this manner on the Firefox web browser
    for hash in hashselected:
        url = f'https://github.com/jekyll/jekyll/commit/{hash}'
        print(url)
